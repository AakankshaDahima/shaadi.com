<html>
    <head>
        <title>
            Todo List
        </title>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
        <script src="/assets/todo-list.js" ></script>
    </head>
    <body>
        <div id="todo-icon">
            <img class="todo-logo" src="assets/p3.png">
            <img class="todo-logo" style="float: right; width: 18%;" src="assets/p1.png"> 
        </div>
        <div id="todo-table">
            <form>
                <input type="text" name="item" placeholder="Add new item..." required />
                <button type="submit">Add Item</button>
            </form>     
            <ul>
                <% for(var i=0; i < todos.length; i++){ %>
                    <li><%= todos[i].item %>
                    <% if(todos[i].prioritize == true){ %>
                        <span class="priority fill" title="Remove Priority">&#9733;
                    <% } else { %>
                        <span class="priority" title="Add Priority">&#9734;
                    <% } %>
                    </span></li> 
                <% } %>
            </ul>
        </div>
    </body>
</html>